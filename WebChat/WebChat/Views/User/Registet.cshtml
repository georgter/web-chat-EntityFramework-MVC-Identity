
@{
    ViewBag.Title = "Registet";
}

    <form class="form-horizontal" method="post" action="Registet">

        <div class="form-group">
            <label for="exampleInputFullName">Введите свое имя</label>
            <input type="text" class="form-control" id="exampleInputFullName" aria-describedby="emailHelp" placeholder="Enter Name" name="Name">
        </div>
        <div class="form-group">
            <label for="exampleInputLogin">Введите Логин </label>
            <input type="text" class="form-control" id="exampleInputLogin" aria-describedby="emailHelp" placeholder="Enter Login" name="Login">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Введите Пароль</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Pass">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Повторите Пароль</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Pass2">
        </div>
        <button type="submit" class="btn btn-primary">Регистрация</button>
        <a href="@Url.Action("Login","User")" class="btn btn-primary">Войти</a>
        <div style="color:red">
            @Html.ValidationMessage("error")
        </div>
    </form>

