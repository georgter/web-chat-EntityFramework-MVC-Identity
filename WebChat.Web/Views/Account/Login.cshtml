<style>
    .box-center {
        width: 50%;
        margin-right: auto;
        margin-left: auto;
    }
</style>


@model WebChat.Web.Models.LoginModel

@{
    ViewBag.Title = "Авторизация";
}

<h2>Авторизация</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal ,box-center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div>
                <label style="margin-left: 20px">Введите Логин </label>
            </div>
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@

            <div>
                <label style="margin-left: 20px">Введите Пороль </label>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left: 0px;">
                <input type="submit" value="Войти" class="btn btn-default" />
                <button data-bind='click: registerClick' class="btn btn-primary">Регистрация</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            var chatViewModel = function () {
                var self = this;
                
                // Переход на страницу регистрации
                self.registerClick = function () {
                    location.href = "/Account/Register/";
                };
            }

            ko.applyBindings(new chatViewModel());
        })
    </script>
}
